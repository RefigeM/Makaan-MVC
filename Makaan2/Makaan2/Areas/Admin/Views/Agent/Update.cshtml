@model AgentUpdateVM

@{
    ViewData["Title"] = "Update";
}

<a class="btn btn-primary" asp-controller="Agent" asp-action="Index">Back</a>

<div class="card-header py-3">
    <h6 class="m-0 font-weight-bold text-primary">Department update</h6>
</div>
<form method="post">

    <div class="form-group">
        <label asp-for="Fullname"></label>
        <input asp-for="Fullname" style="display : block" />
        <span class="text-danger" asp-validation-for="Fullname"></span>
    </div>
    <div class="form-group">
        <label asp-for="ImageUrl"></label>
        <input asp-for="ImageUrl" style="display : block" />
        <span class="text-danger" asp-validation-for="ImageUrl"></span>
    </div>
    <div class="form-group">
        <label asp-for="DepartmentId"></label>
        <input asp-for="DepartmentId" style="display : block" />
        <span class="text-danger" asp-validation-for="DepartmentId"></span>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>



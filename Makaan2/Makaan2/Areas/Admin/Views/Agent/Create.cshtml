@model AgentCreateVM
@{
    ViewData["Title"] = "Create";
}
<a class="btn btn-primary" asp-controller="Agent" asp-action="Index">Back</a>

<div class="card-header py-3">
    <h6 class="m-0 font-weight-bold text-primary">Agent create</h6>
</div>
<form method="post">

    <div class="form-group">
        <label asp-for="Fullname"></label>
        <input asp-for="Fullname" style="display : block" />
        <span class="text-danger" asp-validation-for="Fullname"></span>
    </div>
    <div class="form-group">
         <label asp-for="Image"></label>
         <input asp-for="Image" style="display : block" />
         <span class="text-danger" asp-validation-for="Image"></span>
     </div>
    <div class="form-group">
        <label asp-for="DepartmentId">Departments</label>
        <select asp-for="DepartmentId" asp-items="@(new SelectList(Model.Departments, "Id", "Name"))"></select>
        <span class="text-danger" asp-validation-for="DepartmentId"></span>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>

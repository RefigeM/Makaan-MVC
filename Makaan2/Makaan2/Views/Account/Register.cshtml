@model RegisterVM
@{
    ViewData["Title"] = "Register";
}
<style>
    /* Ümumi fon üçün */
    body {
        background-color: #f4f4f9;
        font-family: Arial, sans-serif;
        color: #333;
    }

    /* Form üçün qutu stili */
    .htc__login__register__wrap {
        background: #fff;
        border-radius: 10px;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        padding: 30px 40px;
    }

    /* Giriş/Register Tabları */
    .login__register__menu {
        margin-bottom: 30px;
        list-style: none;
        padding: 0;
        display: flex;
        justify-content: center;
        gap: 20px;
    }

        .login__register__menu li {
            display: inline;
        }

        .login__register__menu a {
            font-size: 18px;
            font-weight: bold;
            color: #666;
            text-decoration: none;
            padding: 10px 20px;
            border: 2px solid transparent;
            border-radius: 5px;
            transition: all 0.3s ease-in-out;
        }

        .login__register__menu .active a {
            color: #fff;
            background-color: #dc3545; /* Qırmızı düymə rəngi */
            border-color: #dc3545;
        }

        .login__register__menu a:hover {
            color: #fff;
            background-color: #ff6b6b;
            border-color: #ff6b6b;
        }

    /* Form elementləri */
    input {
        width: 100%;
        padding: 10px 15px;
        margin-bottom: 15px;
        border: 1px solid #ccc;
        border-radius: 5px;
        font-size: 16px;
    }

        input:focus {
            border-color: #dc3545;
            outline: none;
            box-shadow: 0px 0px 5px rgba(220, 53, 69, 0.5);
        }

    .btn {
        width: 100%;
        padding: 12px;
        font-size: 16px;
        border-radius: 5px;
        transition: all 0.3s ease-in-out;
    }

    .btn-danger:hover {
        background-color: #c82333;
        border-color: #bd2130;
    }

    /* Validation mesajları */
    .text-danger {
        font-size: 14px;
        margin-top: -10px;
        margin-bottom: 10px;
        display: block;
    }

</style>

<!-- Start Login Register Area -->
<div class="htc__login__register bg__white ptb--130" style="background: rgba(0, 0, 0, 0) url(images/bg/5.jpg) no-repeat scroll center center / cover ;">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <ul class="login__register__menu nav justify-contend-center">
                    <li class="login "><a asp-action="Login">Login</a></li>
                    <li class="register active"><a class="active" asp-action="Register">Register</a></li>
                </ul>
            </div>
        </div>
        <!-- Start Login Register Content -->
        <div class="row tab-content justify-content-center">
            <div class="col-md-6  ml-auto mr-auto">
                <div class="htc__login__register__wrap">
                    <!-- Start Single Content -->
                    <div id="login" class="single__tabs__panel tab-pane active show">
                        <form class="login" method="post">
                            <input asp-for="Fullname" placeholder="FullName">
                            <span asp-validation-for="Fullname" class="text-danger"></span>
                            <input asp-for="Email" placeholder="Email">
                            <span asp-validation-for="Email" class="text-danger"></span>
                            <input asp-for="Username" placeholder="Username">
                            <span asp-validation-for="Username" class="text-danger"></span>
                            <input asp-for="Password" placeholder="Password">
                            <span asp-validation-for="Password" class="text-danger"></span>
                            <input asp-for="RePassword" placeholder="RePassword">
                            <span asp-validation-for="RePassword" class="text-danger"></span>
                            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                            <div class="htc__login__btn">
                                <button class="btn btn-danger">Register</button>
                            </div>
                        </form>
                    </div>
                    <!-- End Single Content -->
                </div>
            </div>
        </div>
        <!-- End Login Register Content -->
    </div>
</div>

